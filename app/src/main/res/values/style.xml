<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:background">@drawable/custom_edittext_background</item>
        <item name="android:textCursorDrawable">@drawable/custom_kursor</item>
        <item name="android:textColorHighlight">@android:color/transparent</item>
        <item name="android:hint">"\n__\n  "</item>
        <item name="paddingStart" > 12dp </item>
        <item name="android:textColorHint">@color/grayOtp</item>
    </style>
</resources>